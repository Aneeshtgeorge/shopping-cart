<section>
    <div class="container mt-5">
        <div class="row">
            {{#each product}}
            <div class="col-md-3 p-3">
                <div class="card" style="width: 15rem; height:23rem">
                    <img src="/product-images/{{this._id}}.jpg" class="card-img-top" style="height:12rem" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="card-text">{{this.price}}</p>
                        
                        <p class="card-text">{{this.category}}</p>
                        <p class="card-text">{{this.description}}</p>
                        
                        <button onclick="addTocart('{{this._id}}')" class="btn btn-primary">ADD TO CART</button>
                    </div>
                </div>
            </div>
            {{/each}}
            
        </div>
    </div>
</section>

<script src="/javascripts/script.js"></script>

